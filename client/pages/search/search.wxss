.search-wrap {
  height: 100%;
  display: flex;
  flex-direction: column;
}

.search-wrap .search-bar {
  height: 88rpx;
  background: #03bbd5;
  display: flex;
  align-items: center;
}

.search-wrap .search-bar .section {
  flex: 1;
  border-radius: 16rpx;
  margin: 0  10rpx 0 20rpx;
  background: #fff;
  display: flex;
  align-items: center;
  padding: 0 10rpx;
  height: 60rpx;
}

.search-wrap .search-bar .button {
  width: 120rpx;
  color: #fff;
  text-align: center;
  line-height: 88rpx;
}

.search-wrap .search-result {
  background: #f5f5f5;
  flex: 1;
  overflow: hidden;
}

.search-wrap .search-result .address {
  color: #ff9700;
}

.search-wrap .search-result .item {
  margin-bottom: 20rpx;
  background: #fff;
  padding: 20rpx;
}